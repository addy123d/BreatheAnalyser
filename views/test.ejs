<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font CDN -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Poppins&family=Josefin+Sans&family=Antonio&display=swap"
        rel="stylesheet">
    <title>Take a test</title>
</head>
<style>
    :root {
        --red: #ff3429;
        --yellow: #ffea29;
        --blue: #18d3ff;
    }

    * {
        margin: 0;
        padding: 0;
    }

    html,
    body {
        background: #f1f3f8;
        color: #ffffff;
    }

    .test {
        background-size: cover;
        min-height: 100vh;
    }

    .button {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .button button {
        padding: .6em 1.9em .6em 1.9em;
        outline: none;
        border: none;
        background: rgb(221, 40, 85);
        text-transform: uppercase;
        color: #f1f3f8;
        font-family: 'Poppins', sans-serif;
        cursor: pointer;
        font-size: 1.4rem;
        border-radius: 5px;
        box-shadow: 20px 20px 60px #b1b1b1,
            -20px -20px 60px #ffffff;
        text-shadow: 1px 1px 1.5px #1c1d1e;
        transition: all .3s;
    }

    .button button:hover {
        background: rgb(190, 32, 72);
    }

    @media (max-width: 630px) {
        .button button {
            padding: .5em 1.6em .5em 1.6em;
            font-size: 1.3rem;
        }
    }

    /* Spinner */

    .container {
        display: none;
        position: relative;
        align-items: center;
        justify-content: center;
    }

    .container.active {
        display: flex;
    }

    .spinner {
        display: flex;
        border-radius: 50%;
        border-width: 20px;
        border-style: solid;
        border-color: rgba(0, 0, 0, 0);
        position: absolute;
    }

    .spin-1 {
        border-right-color: var(--red);
        border-left-color: var(--red);
        width: 300px;
        height: 300px;
        animation: spin 1.1s linear infinite;
    }

    .spin-2 {
        border-right-color: var(--yellow);
        border-left-color: var(--yellow);
        width: 200px;
        height: 200px;
        animation: spinner 1.05s linear infinite;
    }

    .spin-3 {
        border-right-color: var(--blue);
        border-left-color: var(--blue);
        width: 100px;
        height: 100px;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        to {
            transform: rotateZ(360deg);
        }
    }

    @keyframes spinner {
        to {
            transform: rotateZ(-360deg);
        }
    }

    @media(max-width:730px) {
        .spin-1 {
            border-right-color: var(--red);
            border-left-color: var(--red);
            width: 200px;
            height: 200px;
            animation: spin 1.1s linear infinite;
        }

        .spin-2 {
            border-right-color: var(--yellow);
            border-left-color: var(--yellow);
            width: 100px;
            height: 100px;
            animation: spinner 1.05s linear infinite;
        }

        .spin-3 {
            border-right-color: var(--blue);
            border-left-color: var(--blue);
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
        }
    }


    /* Spinner */
    /* Notification */
    .notification {
        position: absolute;
        top: 8%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-family: 'Josefin Sans', sans-serif;
        color: #f1f3f8;
        background: #3d3e41;
        padding: 1.3em;
        font-size: .8rem;
        border-radius: 6px;
        letter-spacing: 1px;
        display: none;
    }

    @media(max-width:660px) {
        .notification {
            padding: 1em;
            font-size: .8rem;
        }
    }

    @media(max-width:515px) {
        .notification {
            padding: 1.1em;
            font-size: .6rem;
        }
    }
</style>

<body>

    <div class="notification">
        <h2>Updated âœ”</h2>
    </div>


    <section class="test">
        <div class="button">
            <button id="taketest">Test</button>
        </div>
        <section class="container">
            <div class="spinner spin-1"></div>
            <div class="spinner spin-2"></div>
            <div class="spinner spin-3"></div>
        </section>
    </section>

</body>
<script>
    const status = `<%=status%>`;
    const testButton = document.querySelector("#taketest");

    if (status === "false") {
        document.querySelector(".container").style.display = "none";
    }

    testButton.addEventListener("click", function () {
        document.querySelector(".container").classList.toggle("active");

        fetch('/getData')
            .then(response => response.json())
            .then(response => {
                if (response.result === "success") {
                    document.querySelector(".container").classList.toggle("active");
                    // Notification
                    document.querySelector(".notification").style.display = "block";


                    setTimeout(() => {
                        document.querySelector(".notification").style.display = "none";
                    }, 3000);
                } else {
                    if (response.redirect_url === "login") {
                        location.href = `${location.origin}/login`;
                    } else {
                        location.href = `${location.origin}/dashboard`;
                    }
                }
            })
            .catch(function (err) {
                console.log(`Something went wrong : ${err}`);
            });
    });
</script>

</html>